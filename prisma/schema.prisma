generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model Session {
  id          String    @id @default(uuid())
  sessionId   String    @unique
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime  @default(now())
  lastActive  DateTime  @updatedAt
  messages    Message[]

  @@schema("public")
}

model Message {
  id         String   @id @default(uuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [sessionId], onDelete: Cascade)
  message    String
  senderType String
  timestamp  DateTime @default(now())
  isRead     Boolean  @default(false)

  @@index([sessionId])
  @@schema("public")
}

model AIConfig {
  id              String   @id @default(uuid())
  isEnabled       Boolean  @default(false)
  provider        String   @default("openrouter") // "openai" or "openrouter"
  model           String   @default("z-ai/glm-4.5-air:free")
  systemPrompt    String   @default("You are a helpful customer support assistant.")
  temperature     Float    @default(0.7)
  maxTokens       Int      @default(500)
  updatedAt       DateTime @updatedAt

  @@schema("public")
}
